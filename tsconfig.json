{
    "compilerOptions": {
        "strict": true,
        "outDir": "./dist",
        "baseUrl": "./",
        "rootDir": "./",
        "declaration": true,
        "module": "commonjs",
        "target": "es5",
        "lib": ["es2022", "dom"],
        "sourceMap": true,
        "allowJs": true,
        "checkJs": true,
        "moduleResolution": "node",
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "declarationDir": "./dist/lib/types",
        "paths": {
            "@/*": ["./src/*"]
        }
    },
    "include": ["src"],
    "exclude": ["node_modules"]
}
